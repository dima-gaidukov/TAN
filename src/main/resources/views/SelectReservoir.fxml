<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>


<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>



<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="com.troutarea.notes.controllers.SelectReservoirController"
            prefWidth="800" prefHeight="600">

    <!-- Фоновое изображение -->
    <ImageView fx:id="reservoirBackgroundImage" fitWidth="800" fitHeight="600" preserveRatio="false"/>

    <!-- GridPane с кнопками, размещенный поверх фона -->
    <GridPane hgap="20" vgap="20" alignment="CENTER"
              AnchorPane.topAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0">
        <!-- Три кнопки для трёх водоёмов -->
        <Button fx:id="btnNorth" text="МФК Парус-Север" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Button fx:id="btnSouth" text="МФК Парус-Юг" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Button fx:id="btnFishPark" text="Фиш парк арена" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
    </GridPane>
</AnchorPane>








